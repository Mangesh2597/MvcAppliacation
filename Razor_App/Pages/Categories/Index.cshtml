@page
@model Razor_App.Pages.Categories.IndexModel
<div class="container">
    <div class="row pt-3 pb-3">
        <div class="col-6"><h2 class="text-priamry">Category List</h2></div>
        <div class="col-6 text-end"><a asp-page="/categories/create" class="btn btn-primary">Create New Categories</a></div>
    </div>

    <table class="table table-bordered table-striped">
<thead>
    <tr>
        <th>Category Name</th>
        <th>Display order</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
            @foreach(var item in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td> <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                        <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger mx-2" >Delete</a>
                    </div></td>
                </tr>
            }
        </tbody>
    </table>
</div>
